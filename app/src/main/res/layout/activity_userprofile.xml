<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Userprofile"
    android:orientation="vertical"
    android:background="@color/white"
    android:backgroundTint="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="20dp"

        android:background="@drawable/backgrounimage"
        >

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="109dp"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"

            android:src="@drawable/profileicon"></ImageView>

        <TextView
            android:id="@+id/user_name"
            android:fontFamily="@font/muli_extrabold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sahil Yadav"
            android:textColor="@color/black"
            android:textCursorDrawable="@color/white"
            android:textSize="35sp"
            android:layout_toRightOf="@+id/profile_image"
            android:layout_marginLeft="20dp"
            android:includeFontPadding="false"
            android:layout_centerVertical="true"
            ></TextView>

        <TextView
            android:id="@+id/rollno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/profile_image"
            android:includeFontPadding="false"
            android:text="Sahil"
            android:textSize="20sp"></TextView>
    </RelativeLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@color/white">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/black"
            android:hint="Roll Number"
            android:layout_marginBottom="10dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/rollnumberupdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2022UCS1709"
                android:textColor="@color/black"
                android:textColorHint="@android:color/black"
                android:drawableLeft="@drawable/icon_roll"
                android:drawablePadding="10dp"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:textColorHint="@android:color/black"
            android:layout_marginBottom="10dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phoneupdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9250802052"
                android:textColor="@color/black"
                android:textColorHint="@android:color/black"
                android:drawableLeft="@drawable/icon_phone"
                android:drawablePadding="10dp"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Working Company"
            android:textColorHint="@android:color/black"
            android:layout_marginBottom="10dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/companynameupdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salesforce"
                android:textColor="@color/black"
                android:textColorHint="@android:color/black"
                android:drawableLeft="@drawable/icon_company"
                android:drawablePadding="10dp"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Post"
            android:textColorHint="@android:color/black"
            android:layout_marginBottom="10dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/designationupdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SDE2"
                android:textColor="@color/black"
                android:textColorHint="@android:color/black"
                android:drawableLeft="@drawable/icon_company"
                android:drawablePadding="10dp"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColor="@color/black"

            android:textColorHint="@android:color/black"
            android:layout_marginBottom="10dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordupdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yadav@123"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@android:color/black"
                android:drawableLeft="@drawable/icon_password"
                android:drawablePadding="10dp"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/updatebutton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            android:text="Update"
            android:layout_gravity="center"/>



    </LinearLayout>

</android.widget.LinearLayout>